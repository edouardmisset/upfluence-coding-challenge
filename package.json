{
  "name": "upfluence-challenge",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "preview": "pnpm --filter web preview",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "check": "pnpm format && pnpm lint:spell && pnpm lint:style && turbo run lint type-check test",
    "validate": "pnpm check && turbo run build test:e2e",
    "knip": "knip",
    "lint:style": "stylelint --cache --fix \"**/*.css\"",
    "lint:spell": "cspell --cache \"**/*\"",
    "format": "prettier --cache --write \"**/*.{ts,tsx,md,html,js,json,css}\"",
    "test": "turbo run test",
    "benchmark": "pnpx tsx scripts/benchmark.mts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "gzip-size": "^7.0.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-plugin-logical-css": "^1.2.3",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@edouardmisset/math": "npm:@jsr/edouardmisset__math@^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,vue,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
