{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "commitlint": {
    "config": [".commitlintrc.json"]
  },
  "ignoreDependencies": ["@commitlint/cli"],
  "workspaces": {
    ".": {
      "entry": [
        "eslint.config.mjs",
        "scripts/**/*.{ts,js}",
        ".commitlintrc.json"
      ]
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/web": {
      "entry": [
        "astro.config.mjs",
        "src/pages/**/*.{astro,ts,tsx,vue,svelte}",
        "src/env.d.ts"
      ],
      "project": ["src/**/*.{ts,tsx,astro,vue,svelte}"]
    }
  }
}
